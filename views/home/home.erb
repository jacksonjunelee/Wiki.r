<h1> Welcome to Wiki </h1>

<h2> New Documents</h2>
<h5> ---------------------------------------------- </h5>

  <div class="frontpage">
    <% @new_docs.each do |new_doc| %>
  <label class= "mufasas" for="title">New page: <a href ="/documents/<%= new_doc.id %>"><%= new_doc.title %></a></label><br>
  <label class= "mufasa" for="date">Edited on: <%= new_doc.updated_at %></label>
  <span>|</span>
  <label class= "mufasa" for="author">Edited by: <a href= "/authors/<%=new_doc.versions.first.author.id%>"> <%= new_doc.versions.first.author.username %></a></label><br>
<% end %>



<h2> Recent Changes </h2>
<h5> ---------------------------------------------- </h5>

<div class="frontpage">
  <% @changes.each do |change| %>
  <label for="date">Edited on: <%= change.updated_at %></label>
  <span>|</span>
  <label for="date">Edited by: <%= change.author.username %></label><br>
  <label for="recent_blurb">Description: <%= change.blurb %></label><br>
  <label for="recent_content">Content: <%= change.content %></label><br><br>
<% end %>
