w<h2> Create a New Document </a><br>

<form action="/documents" method="post">

<label for="title">Title: </label>
  <input type="text" name="document[title]" value="">
    ><br>

  <label for="author">Author:
		<select name="version[author_id]">
			<% @author.each do |author| %>
				<option value="<%= author.id %>"><%= author.username %></option>
			<% end %>
		</select>
	</label><br>

<label for="Comment">Description: </label>
  <textarea rows="4" cols="80" name="version[blurb]"> </textarea>
    </label><br>

<label for="Content">Content: </label>
  <textarea rows="4" cols="80" name="version[content]"> </textarea>
    </label><br>

<label for="Date">Date: </label>
  <input type="text" name="version[v_date]" value="">
    </label><br>



  <input type="submit" name="submit" value="Submit Document">

</form>
