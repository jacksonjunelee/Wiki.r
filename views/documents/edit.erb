<h3> Edit <%= @document.title %> </h3>

<form action="/documents/<%= @document.id %>" method="POST">
	<input type="hidden" name="_method" value="PUT">

<label for="author">Author:
    <select name="version[author_id]">
      <% @authors.each do |author| %>
        <option value="<%= author.id %>"><%= author.username %></option>
      <% end %>
    </select>
  </label><br>

	<label for="Comment">Description:
		<textarea rows="4" cols="80" name="version[blurb]"> </textarea>
			</label><br>

	<label for="Content">Content:
		<textarea rows="4" cols="80" name="version[content]"> </textarea>
      </label><br>

  <label for="Date">Date:
    <input type="text" name="version[created_at]" value="">
      </label><br>

  <input type="submit" name="submit" value="Submit Document">

</form>

<form action="/documents/<%= @document.id %>" method="POST">
	<input type="hidden" name="_method" value="DELETE">
	<button>DELETE</button>
</form>
